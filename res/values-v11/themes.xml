<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MensaTheme" parent="@style/Theme.Sherlock">
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="android:typeface">serif</item>
		<item name="android:selectableItemBackground">@android:color/transparent</item>
    </style>

    <style name="CustomTitlePageIndicator" parent="Widget">
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">0dp</item>
        <item name="footerIndicatorStyle">none</item>
        <item name="selectedBold">false</item>
        <item name="footerPadding">20dp</item>
        <item name="titlePadding">15dp</item>
    </style>

    <style name="PreferencesTheme" parent="@style/Theme.Sherlock">
	    <item name="android:windowBackground">@drawable/background_settings</item>
	    <item name="android:textColor">@color/fontcolor</item>
	    <item name="android:typeface">serif</item>
	</style>
</resources>